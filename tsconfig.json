{
  "compilerOptions": {
    "rootDir": "src",
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@app/*": [
        "*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "dist/**/*",
    "public/**/*",
    "node_modules"
  ]
}
